﻿@{
    ViewData["Title"] = "FeeType Create";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@model FeeType
<style>
    .create-header {
        color: #143a7a;
        border-bottom: 2px solid #143a7a;
        padding-bottom: 10px;
        margin-bottom: 25px;
    }

    .form-label {
        color: #143a7a;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 10px 15px;
        max-width: 500px;
    }

        .form-control:focus {
            border-color: #143a7a;
            box-shadow: 0 0 0 0.2rem rgba(20, 58, 122, 0.25);
        }

    .btn-create {
        background-color: #143a7a;
        border-color: #143a7a;
        color: white !important;
        padding: 8px 25px;
        border-radius: 4px;
        transition: all 0.3s;
    }

        .btn-create:hover {
            background-color: #0d2a5a;
            border-color: #0d2a5a;
            transform: translateY(-1px);
        }

    .btn-back {
        background-color: #b7223e;
        border-color: #b7223e;
        color: white !important;
        padding: 8px 25px;
        border-radius: 4px;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background-color: #9a1c34;
            border-color: #9a1c34;
            transform: translateY(-1px);
        }

    .text-danger {
        color: #b7223e;
        font-size: 0.875rem;
    }

    .form-container {
        padding: 25px 15px;
        max-width: 600px;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        margin-top: 25px;
        flex-wrap: wrap;
    }

    @@media (max-width: 768px) {
        .form-control {
            max-width: 100%;
        }

        .action-buttons {
            flex-direction: column;
            gap: 10px;
        }

        .btn-create, .btn-back {
            width: 100%;
        }
    }
</style>

<div class="form-container">
    <h2 class="create-header">
        <i class="bi bi-plus-circle-fill"></i> Create Class Name
    </h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name" class="form-label">Fee Type Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Fee Type name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="action-buttons">
            <button type="submit" class="btn btn-create">
                <i class="bi bi-check-circle"></i> Create
            </button>
            <a asp-action="Index" class="btn btn-back">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
