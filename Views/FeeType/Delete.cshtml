﻿@{
    ViewData["Title"] = "Fees Type";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@model FeeType

<style>
    .delete-header {
        color: #b7223e;
        border-bottom: 2px solid #b7223e;
        padding-bottom: 10px;
        margin-bottom: 25px;
    }

    .warning-message {
        color: #b7223e;
        background-color: rgba(183, 34, 62, 0.1);
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 20px;
        border-left: 4px solid #b7223e;
        max-width: 500px;
    }

    .btn-delete {
        background-color: #b7223e;
        border-color: #b7223e;
        color: white !important;
        padding: 8px 25px;
        border-radius: 4px;
        transition: all 0.3s;
    }

        .btn-delete:hover {
            background-color: #9a1c34;
            border-color: #9a1c34;
            transform: translateY(-1px);
        }

    /* Reuse other styles from Create.cshtml */
</style>

<div class="container">
    <h2 class="delete-header">
        <i class="bi bi-exclamation-triangle-fill"></i> Delete Installment Type
    </h2>

    <div class="warning-message">
        <i class="bi bi-exclamation-circle-fill"></i> Warning: This action cannot be undone. Please confirm you want to delete this installment type.
    </div>

    <form method="post" asp-action="Delete">
        <input asp-for="FeeTypeId" hidden />

        <div class="form-group">
            <label asp-for="Name" class="form-label">Fee Name</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        </br>

        <div class="action-buttons">
            <button type="submit" class="btn btn-delete">
                <i class="bi bi-trash-fill"></i> Confirm Delete
            </button>
            <a asp-controller="SchoolClass" asp-action="Index" class="btn btn-back">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}