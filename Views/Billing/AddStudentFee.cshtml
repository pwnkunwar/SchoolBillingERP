@model StudentFeeViewModel
@{
    ViewData["Title"] = "Admin";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<style>
    .installment-header {
        color: #143a7a;
        border-bottom: 2px solid #143a7a;
        padding-bottom: 10px;
        margin-bottom: 25px;
    }

    .form-label {
        color: #143a7a;
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 8px 12px;
        height: 40px;
        width: 100%;
    }

    .select2-container .select2-selection--single {
        height: 40px !important;
        border: 1px solid #ced4da !important;
        border-radius: 4px !important;
    }

    .select2-container--default .select2-selection--single .select2-selection__rendered {
        line-height: 40px !important;
        padding-left: 12px !important;
    }

    .select2-container--default .select2-selection--single .select2-selection__arrow {
        height: 38px !important;
    }

    .btn-submit {
        background-color: #143a7a;
        border-color: #143a7a;
        color: white !important;
        padding: 10px 25px;
        border-radius: 4px;
        margin-top: 20px;
        width: 100%;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-container {
        margin: 0 auto;
        padding: 25px;
    }

    .fee-type-row {
        background-color: #f9f9f9;
        padding: 15px 10px;
        border: 1px solid #ddd;
        border-radius: 6px;
    }

    .btn-add {
        background-color: #198754;
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 4px;
        margin-top: 10px;
    }

        .btn-add:hover {
            background-color: #157347;
        }

    .remove-fee-type {
        font-size: 14px;
    }

    @@media (max-width: 768px) {
        .form-container {
            padding: 15px;
        }
    }
</style>

<div class="form-container">
    <h2 class="installment-header">Enter Student Payment</h2>

    <form asp-action="CreateInstallmentPayment" method="post">
        <!-- Client Dropdown -->
        <div class="form-group">
            <label class="form-label">Select Class</label>
            <select asp-for="Id" asp-items="Model.Class" class="form-control select2-client" id="clientSelect">
                <option value="">-- Select Class --</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-label">Student Name</label>
            <select asp-for="Id" class="form-control select2-installment" id="installmentSelect">
                <option value="">-- Select Student --</option>
            </select>
        </div>

        <div class="form-group">
            <label class="form-label">Select Fee Types and Amounts</label>
            <div id="fee-type-container">
                <!-- Dynamically added FeeType rows will appear here -->
            </div>
            <button type="button" class="btn-add" id="addFeeType">Add Fee Type</button>
        </div>

        <!-- Nepali Date -->
        <div class="form-group">
            <label class="form-label">Select Nepali Date</label>
            <input type="text" asp-for="PaymentDate" class="form-control date-picker" />
            <input type="hidden" name="EnglishDate" id="englishDate" />
        </div>

        <button type="submit" class="btn-submit">Submit Payment</button>
    </form>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2-client, .select2-installment').select2({
                allowClear: true,
                width: '100%'
            });

            $('#clientSelect').on('change', function () {
                var classId = $(this).val();
                var $installmentSelect = $('#installmentSelect');

                if (classId) {
                    $.ajax({
                        url: '@Url.Action("GetStudentsByClass", "Billing")',
                        type: 'GET',
                        data: { classId: classId },
                        success: function (students) {
                            $installmentSelect.empty().append('<option value="">-- Select Student --</option>');
                            students.forEach(function (item) {
                                $installmentSelect.append(
                                    $('<option></option>').val(item.classId).text(item.fullName)
                                );
                            });
                            $installmentSelect.trigger('change');
                        },
                        error: function () {
                            console.error('Error loading students');
                        }
                    });
                } else {
                    $installmentSelect.empty().append('<option value="">-- Select Student --</option>');
                }
            });

            let feeTypeIndex = 0;
            $('#addFeeType').on('click', function () {
                var feeTypeRow = `
                        <div class="fee-type-row row align-items-center mb-3" data-index="${feeTypeIndex}">
                            <div class="col-md-5 mb-2 mb-md-0">
                                <select name="FeeTypeSelections[${feeTypeIndex}].FeeTypeId" class="form-control select2-fee-type" required>
                                    <option value="">-- Select Fee Type --</option>
        @foreach (var feeType in Model.FeeTypes)
        {
                                            <option value="@feeType.Value">@feeType.Text</option>
        }
                                </select>
                            </div>
                            <div class="col-md-5 mb-2 mb-md-0">
                                <input type="number" name="FeeTypeSelections[${feeTypeIndex}].Amount" class="form-control" placeholder="Amount" step="0.01" required />
                            </div>
                            <div class="col-md-2 text-md-end">
                                <button type="button" class="btn btn-danger remove-fee-type w-100">Remove</button>
                            </div>
                        </div>`;
                $('#fee-type-container').append(feeTypeRow);
                $(`select[name="FeeTypeSelections[${feeTypeIndex}].FeeTypeId"]`).select2({ width: '100%' });
                feeTypeIndex++;
            });

            $('#fee-type-container').on('click', '.remove-fee-type', function () {
                $(this).closest('.fee-type-row').remove();
            });

            $('.date-picker').nepaliDatePicker({
                dateFormat: '%D, %M %d, %y',
                closeOnDateSelect: true,
                minDate: 'सोम, जेठ १०, २०७३',
                maxDate: 'मंगल, जेठ ३२, ३०९९',
                onChange: function (nepaliDate) {
                    var englishDate = NepaliDateFunctions.BS2AD(nepaliDate);
                    $('#englishDate').val(englishDate);
                }
            });
        });
    </script>
}
