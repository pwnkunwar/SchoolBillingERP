@model SchoolBillingERP.Models.Student
@{
    ViewData["Title"] = "Edit Student Info";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<h2>Edit Student Details</h2>

<form asp-action="EditStudentDetails" method="post">
    <input type="hidden" asp-for="StudentId" />

    <div class="mb-3">
        <label class="form-label">Student Name</label>
        <input type="text" class="form-control" asp-for="FullName" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" required />
    </div>

    <div class="mb-3">
        <label class="form-label">ParentPhoneNumber</label>
        <input type="text" class="form-control" asp-for="ParentPhoneNumber" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="ClassId" class="control-label">Class</label>
        <select asp-for="ClassId" class="form-control" asp-items="@(ViewData["ClassList"] as SelectList)">
            <option value="">-- Select Class --</option>
        </select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select class="form-control" asp-for="Status" required>
            <option value="Enrolled">Enrolled</option>
            <option value="Not Enrolled">Not Enrolled</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Gender</label>
        <select class="form-control" asp-for="Gender" required>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="GetAllStudents" class="btn btn-secondary">Cancel</a>
</form>


